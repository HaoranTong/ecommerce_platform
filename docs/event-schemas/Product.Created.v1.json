{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://api.ecommerce.example.com/schemas/Product.Created.v1.json",
    "title": "Product Created Event",
    "description": "商品创建事件",
    "type": "object",
    "properties": {
        "event_id": {
            "type": "string",
            "format": "uuid",
            "description": "事件唯一标识"
        },
        "event_type": {
            "type": "string",
            "const": "Product.Created",
            "description": "事件类型"
        },
        "version": {
            "type": "string",
            "const": "1",
            "description": "Schema 版本"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "事件发生时间"
        },
        "correlation_id": {
            "type": "string",
            "format": "uuid",
            "description": "关联 ID"
        },
        "source": {
            "type": "string",
            "description": "事件来源"
        },
        "data": {
            "type": "object",
            "properties": {
                "product_id": {
                    "type": "integer",
                    "description": "商品 ID"
                },
                "name": {
                    "type": "string",
                    "description": "商品名称"
                },
                "sku": {
                    "type": "string",
                    "description": "商品 SKU"
                },
                "description": {
                    "type": "string",
                    "description": "商品描述",
                    "nullable": true
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "description": "创建时间"
                }
            },
            "required": [
                "product_id",
                "name",
                "sku",
                "created_at"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "event_id",
        "event_type",
        "version",
        "timestamp",
        "correlation_id",
        "data"
    ],
    "additionalProperties": false
}