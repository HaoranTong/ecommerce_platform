{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://api.ecommerce.example.com/schemas/Order.Created.v1.json",
    "title": "Order Created Event",
    "description": "订单创建事件",
    "type": "object",
    "properties": {
        "event_id": {
            "type": "string",
            "format": "uuid",
            "description": "事件唯一标识"
        },
        "event_type": {
            "type": "string",
            "const": "Order.Created",
            "description": "事件类型"
        },
        "version": {
            "type": "string",
            "const": "1",
            "description": "Schema 版本"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "事件发生时间"
        },
        "correlation_id": {
            "type": "string",
            "format": "uuid",
            "description": "关联 ID，用于追踪相关事件"
        },
        "source": {
            "type": "string",
            "description": "事件来源（如：web, api, mobile）"
        },
        "data": {
            "type": "object",
            "properties": {
                "order_id": {
                    "type": "integer",
                    "description": "订单 ID"
                },
                "order_number": {
                    "type": "string",
                    "maxLength": 50,
                    "description": "订单号"
                },
                "user_id": {
                    "type": "integer",
                    "description": "用户 ID"
                },
                "total_amount": {
                    "type": "number",
                    "multipleOf": 0.01,
                    "minimum": 0,
                    "description": "订单总金额"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "pending",
                        "paid",
                        "shipped",
                        "delivered",
                        "cancelled"
                    ],
                    "description": "订单状态"
                },
                "payment_method": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "enum": [
                        "wechat",
                        "alipay",
                        "bank_card",
                        null
                    ],
                    "description": "支付方式"
                },
                "payment_status": {
                    "type": "string",
                    "enum": [
                        "pending",
                        "paid",
                        "failed",
                        "refunded"
                    ],
                    "description": "支付状态"
                },
                "order_items": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "product_id": {
                                "type": "integer",
                                "description": "商品 ID"
                            },
                            "product_name": {
                                "type": "string",
                                "description": "商品名称快照"
                            },
                            "product_sku": {
                                "type": "string",
                                "description": "商品 SKU 快照"
                            },
                            "quantity": {
                                "type": "integer",
                                "minimum": 1,
                                "description": "购买数量"
                            },
                            "unit_price": {
                                "type": "number",
                                "multipleOf": 0.01,
                                "minimum": 0,
                                "description": "单价"
                            },
                            "total_price": {
                                "type": "number",
                                "multipleOf": 0.01,
                                "minimum": 0,
                                "description": "小计金额"
                            }
                        },
                        "required": [
                            "product_id",
                            "product_name",
                            "product_sku",
                            "quantity",
                            "unit_price",
                            "total_price"
                        ],
                        "additionalProperties": false
                    },
                    "minItems": 1,
                    "description": "订单项列表"
                },
                "shipping_address": {
                    "type": [
                        "object",
                        "null"
                    ],
                    "description": "收货地址信息"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "description": "创建时间"
                }
            },
            "required": [
                "order_id",
                "order_number",
                "user_id",
                "total_amount",
                "status",
                "payment_status",
                "order_items",
                "created_at"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "event_id",
        "event_type",
        "version",
        "timestamp",
        "source",
        "data"
    ],
    "additionalProperties": false
}